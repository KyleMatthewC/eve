@using Eve.Web.ViewModels
@model Eve.Web.ViewModels.LoginViewModel
@{
    ViewBag.Title = "Signin";
    Layout = null;
}

<head>
    <meta charset="utf-8">
    <meta http-equiv="X-UACompatible" content="="IE="edge" />
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <link href="~/lib/bootstrap/dist/css/bootstrap.min.css" rel="stylesheet" />
    <link href="~/css/ie10-viewport-bug-workaround.css" rel="stylesheet" />
    <link rel="icon" href="~/favicon.ico" />
    <script src="~/js/ie10-viewport-bug-workaround.js"></script>
    <script src="~/js/ie-emulation-modes-warning.js"></script>
    <script src="~/lib/jquery/dist/jquery.js"></script>
    
    <title>Signin</title>
</head>

<body>
    <div class="container">
        <h1 align="center">EVE LOGO</h1>
            <form class="form-signin form-horizontal" id="form-login" asp-controller="Signin" asp-action="Login" method="post">
                <h3 align="center" class="form-signin-heading">Please sign in</h3>
                <div class="form-group">
                    <div class="col-xs-offset-4 col-xs-4">
                        <input id ="username" class="form-control" asp-for="username" type="text" placeholder="Username" required />
                    </div>
                </div>
                <div class="form-group">
                    <div class="col-xs-offset-4 col-xs-4">
                        <input id="password" class="form-control" asp-for="password" type="password" placeholder="Password" required />
                    </div>
                </div>
                <div align="center" class="form-group">
                    <div>
                        <button class="btn btn-lg btn-primary" id="login-btn" type="submit">
                            <span class="glyphicon glyphicon-log-in"></span> Log in
                        </button>
                    </div>
                </div>
            </form>
        <div>
            @Html.ValidationSummary(true, "", new { @class = "text-danger" })
        </div>
    </div>
</body>

